@model Entities.Usuario.LoginModel
@{
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
}

<div class="contenido">
    <div class="row">
        <div class="col-sm-12 col-lg-8">
            <div class="image-container">
                <img src="~/Images//logo.png" />
            </div>
        </div>
        <div class="col-sm-12 col-lg-4">
            <div class="card">
                <div class="card-header" style="background:white">
                    <h3 class="text-center">Login</h3>
                </div>
                <div class="card-body">
                    <form class="text-center p-5" action="@Url.Action("Index","Login")" method="post">
                        <div class="form-floating mb-5" style="width:25rem">

                            @(Html.TextBoxFor(m=>m.UserName,new  { @class = "form-control" }))
                            @(Html.LabelFor(m => m.UserName))
                            @(Html.ValidationMessage("UserName", new { @class="text-danger"}))
                        </div>
                        <div class="form-floating mb-5">
                            @(Html.PasswordFor(m=>m.Password,new  { @class = "form-control" }))
                            @(Html.LabelFor(m => m.Password))
                            @(Html.ValidationMessage("Password", new { @class="text-danger"}))
                        </div>
                        <div class="form-floating">
                            <input type="submit" class="btn btn-success" value="Entrar" />
                        </div>
                    </form>
                </div>
                @if (ViewBag.mensaje != "")
                {
                    <small class="text-danger text-center">@ViewBag.mensaje</small>
                }
            </div>
        </div>
    </div>
</div>

